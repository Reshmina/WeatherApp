<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrol"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_winds">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/2/19"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/date"
                android:gravity="left"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/day"
                android:gravity="left"
                android:text="Monday"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kolkata,IN"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:id="@+id/place"
                android:layout_weight="1"
                android:gravity="right"
                android:onClick="onClick"/>

        </LinearLayout>
        <TextView
            android:id="@+id/windspeed"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="52kmph"
            android:textColor="#000000"
            android:alpha="0.6"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="130dp"
            android:layout_height="93dp"
            android:layout_gravity="center"
            android:src="@drawable/winds" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="#20cacccf"
            android:id="@+id/card1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/arrow"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="TUESDAY"
                    android:id="@+id/cardDay1"
                    android:gravity="center"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="29째c"
                    android:id="@+id/cardtemp1"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_weight="2"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="#20cacccf"
            android:id="@+id/card2"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/arrow"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="TUESDAY"
                    android:id="@+id/cardDay2"
                    android:gravity="center"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="29째c"
                    android:gravity="center"
                    android:id="@+id/cardtemp2"
                    android:textSize="15sp"
                    android:layout_weight="2"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="#20cacccf"
            android:id="@+id/card3"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/arrow"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="TUESDAY"
                    android:id="@+id/cardDay3"
                    android:gravity="center"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="29째c"
                    android:gravity="center"
                    android:id="@+id/cardtemp3"
                    android:textSize="15sp"
                    android:layout_weight="2"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="#20cacccf"
            android:id="@+id/card4"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/arrow"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="TUESDAY"
                    android:id="@+id/cardDay4"
                    android:gravity="center"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="29째c"
                    android:gravity="center"
                    android:id="@+id/cardtemp4"
                    android:textSize="15sp"
                    android:layout_weight="2"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:id="@+id/progressbar"
        android:layout_height="match_parent"
        android:padding="150dp"
        android:indeterminateTint="#fff"
        android:background="@drawable/gradient_winds"/>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        app:headerLayout="@layout/header"
        android:layout_height="match_parent"
        android:id="@+id/design_navigation_view"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:padding="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaaaaa"></LinearLayout>
            <TextView
                android:id="@+id/sunrise"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunrise : 4:56 AM"/>
            <TextView
                android:id="@+id/sunset"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunset  : 4:56 PM"/>
        </LinearLayout>


    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>